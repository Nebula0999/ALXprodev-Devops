#!/bin/bash

# Define input directory and output file
INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"
TEMP_FILE="temp_data.txt"

# Check if JSON files exist
if [ ! -d "$INPUT_DIR" ] || [ -z "$(ls -A $INPUT_DIR/*.json 2>/dev/null)" ]; then
    echo "No JSON files found in $INPUT_DIR. Run the fetch script first."
    exit 1
fi

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Clear temp data file
> "$TEMP_FILE"

# Process each JSON file
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert to meters and kilograms
    height_m=$(awk "BEGIN {printf \"%.2f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")

    # Write to CSV and temp
    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
    echo "$height_m $weight_kg" >> "$TEMP_FILE"
done

# Calculate averages using awk
awk '
BEGIN {
    height_sum = 0;
    weight_sum = 0;
    count = 0;
}
{
    height_sum += $1;
    weight_sum += $2;
    count++;
}
END {
    avg_height = height_sum / count;
    avg_weight = weight_sum / count;
    printf "\nAverage Height: %.2f m\n", avg_height;
    printf "Average Weight: %.2f kg\n", avg_weight;
}
' "$TEMP_FILE"

# Clean up temp file
rm "$TEMP_FILE"

# Report
echo -e "\nCSV Report generated at: $OUTPUT_FILE"
