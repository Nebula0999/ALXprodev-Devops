#!/bin/bash

# Ensure data.json exists
if [ ! -f data.json ]; then
  echo "data.json not found. Please run the previous script to fetch data first."
  exit 1
fi

# Extract fields using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize the name
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')  # Capitalize the type

# Convert height (decimetres to metres) and weight (hectograms to kilograms)
height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
weight_kg=$(awk "BEGIN {printf \"%.0f\", $weight / 10}")

# Output the formatted result
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."
